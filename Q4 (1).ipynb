    "def collatz(number):\n",
    "  lst=[]\n",
    "  lst.append(number)\n",
    "  while(number!=1):\n",
    "      if(number%2==0):\n",
    "          number=number//2\n",
    "          lst.append(number)\n",
    "      else:\n",
    "          number=number*3+1\n",
    "          lst.append(number)\n",
    "  print(lst)"
